{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "swc": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "./src/**/*",
    "./*.ts"
  ]
}
